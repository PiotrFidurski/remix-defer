// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


type Image {
  placeholder String 
  originalPlaceholder String
  original String
  thumbnail String
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  color String
  qty Int
  brand String
  connectivity String?
  type String
  variant String
  price Int
  name String
  image Image
}
